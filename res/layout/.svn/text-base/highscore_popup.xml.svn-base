<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:background="#00000000" >
    
    <TableLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:minWidth="200dp"
        android:background="#FFFFFFFF" >
		<ImageView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"
		    android:layout_marginBottom="20dp"
		    android:src="@drawable/congratulations" />
		
	    <TextView
	        android:id="@+id/highscore_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/highscore_popup_enter_name"
	        android:textColor="#333333"
	        android:textSize="10sp"
	        android:layout_marginBottom="10dp" >
	    </TextView>
	
	    <EditText
	        android:id="@+id/highscore_name"
	        android:layout_width="200dp"
	        android:maxLines="1"
	        android:singleLine="true"
	        android:maxLength="30"
	        android:layout_height="wrap_content" >
	
	        <requestFocus />
	    </EditText>
	
	    <Button
	        android:id="@+id/highscore_submit"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:text="@string/highscore_popup_submit" />
	</TableLayout>
</LinearLayout>