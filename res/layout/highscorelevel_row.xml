<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp" >
		
	<TextView android:id="@+id/username" android:textSize="14sp"
		android:textStyle="bold" android:textColor="#FFFF00"
		android:lineSpacingExtra="5sp" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<TextView android:id="@+id/flips"
		android:textSize="10sp" android:textStyle="normal" android:textColor="#FFFFFF"
		android:lineSpacingExtra="5sp" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	
	<TextView android:id="@+id/collectibles"
		android:textSize="10sp" android:textStyle="normal" android:textColor="#FFFFFF"
		android:lineSpacingExtra="5sp" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
</LinearLayout>