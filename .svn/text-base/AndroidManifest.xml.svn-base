<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="se.liu.tdp021.gravityGame"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".SplashScreenActivity"
        	android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <activity android:name=".GameplayActivity"
        	android:screenOrientation="portrait"
        	android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
        	 />
        	
        <activity android:name=".MainMenu"
        	android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        	
        <activity android:name=".OptionsActivity"
        	android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        	
        <activity android:name=".HighscoreActivity"
        	android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        
          <activity android:name=".HighscoreLevelActivity"
        	android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        
        	
        <activity android:name=".LevelSelectorActivity"
        	android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        	
        <activity android:name=".VictoryActivity"
        	android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />

    </application>
</manifest>